<% layout('layouts/boilerplate')%>

<div class="customContainer">
<div class="customCard">
<img class="img-fluid w-100 rounded-top" alt="" src="https://res.cloudinary.com/dgz6d6j5h/image/upload/v1667934478/YelpCamp/jesse-gardner-wTVr4HR4SBI-unsplash_gqpytk.jpg">
<h1 class="w-75">Log in</h1>
<form action="/login" class="validated-form w-75" method="POST" novalidate>
    <div class="mb-3">
        <label class="form-label" for="username">Username</label> 
        <input class="form-control" type="text" id="username" name="username" required>
        <div class="valid-feedback">Looks Good</div>
    </div>
    <div class="mb-3">
        <label class="form-label" for="password">Password</label> 
        <input class="form-control" type="password" id="password" name="password" required>
        <div class="valid-feedback">Looks Good</div>
    </div>
    <button class="btn btn-success mb-3">Log in</button>
</form>
</div>
</div>